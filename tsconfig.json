{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["es2015", "es2018", "es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    "target": "es2015",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false,
    "types": []
  },
  "include": ["src/**/*"]
}
